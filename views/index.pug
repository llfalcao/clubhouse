extends layout

block content
  main.w-full(class="dark:bg-zinc-900")
    h1= title
    p Welcome to #{ title }

    if user
      form.text-3xl.font-bold.underline.px-2.w-full.mx-auto.flex.flex-col.max-w-lg.m-3(
        class="dark:text-black",
        method="POST"
      )
        input.px-5.py-2.rounded-t-lg.border.border-zinc-500.placeholder-zinc-400(
          class="focus:outline-none focus:border-sky-600 focus:ring-1 dark:bg-zinc-600 dark:text-white",
          type="text",
          name="title",
          placeholder="Title",
          value=""
        )
        textarea.p-5.rounded-b-lg.border.border-zinc-500.border-t-none.placeholder-zinc-400(
          class="focus:outline-none focus:border-sky-600 focus:ring-1 dark:bg-zinc-600 dark:text-white",
          name="text",
          placeholder="Share your message!"
        )
        input(type="hidden", name="user", value=user)
        div.justify-content-right(class="md:flex")
          div.p-3(class="md:w-2/3 dark:text-white")
          button.shadow.bg-blue-500.text-white.my-2.px-4.py-2.rounded.max-w-xs(
            class="active:bg-blue-600 md:w-1/3",
            type="submit"
          )
            | Submit

    if messages
      ul.w-full.mx-auto.flex.flex-col.max-w-xl.px-3
        each msg of messages
          li.border.border-zinc-500.p-5.bg-neutral-900.text-gray-300.message
            p= msg.text
            p.font-bold.text-sm= msg.author.membership_status === "member" ? msg.author.username : "Anonymous"
            p= msg.timestamp_formatted

    p.mx-auto.w-max.text-xl.my-5 There are no more posts.
