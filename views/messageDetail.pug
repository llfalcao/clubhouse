extends layout

block content
  main.w-full.min-h-screen.p-3(class='md:p-0')
    form.mx-auto.w-max(method='POST')
      h1.text-2xl.my-10 Are you sure you want to delete this message?
      div.relative.p-5.flex.flex-col.message.max-w-md.rounded-md
        p.mb-2.font-semibold= message.title
        p.mb-3= message.text
        div.mt-auto
          a.font-bold.text-sm(href='#')
            span.align-bottom @
            span= message.author.username
        p.text-sm.text-gray-300= message.timestamp_formatted
      div.mt-7.flex.justify-center.gap-7
        button.bg-red-500.py-2.px-4.font-semibold.rounded(
          type='submit',
          class='active:bg-red-600'
        ) Delete
        a(href='/')
          button.bg-gray-500.py-2.px-4.font-semibold.rounded(
            type='button',
            class='active:bg-gray-600'
          ) Cancel
