html
  head
    title Clubhouse #{title}
    link(rel="stylesheet" href="/styles/style.css")
    script(src="https://cdn.tailwindcss.com")
  body(class="dark:bg-zinc-900 dark:text-white")
    a(href="/")
      button(
        class="bg-blue-500 active:bg-blue-600 text-white px-4 py-2 rounded"
        type="button"
      ) Home (temp)
    h1(class="text-3xl font-bold")= title

    div(class="w-full max-w-xs")
      form(
        class="bg-white dark:bg-blue-200 shadow-md rounded px-8 pt-6 pb-8 mb-4"
        method="POST"
      )
        div(class="mb-4")
          label(
            class="block text-gray-700 text-sm font-bold mb-2"
            for="username"
          ) Username
          input(
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight"
            id="username"
            type="text"
            name="username"
            placeholder="Username"
          )
        div(class="mb-6")
          label(
            class="block text-gray-700 text-sm font-bold mb-2"
            for="password"
          ) Password
          input(
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight"
            id="password"
            type="password"
            name="password"
            placeholder="********"
          )
        div(class="flex items-center justify-between")
          button(
            class="bg-blue-500 active:bg-blue-600 text-white px-4 py-2 rounded"
            type="submit"
          ) Sign In
