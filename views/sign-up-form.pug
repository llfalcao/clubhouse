html
  head
    title Clubhouse #{title}
    link(rel="stylesheet" href="/styles/style.css")
    script(src="https://cdn.tailwindcss.com")
  body(class="dark:bg-zinc-900 dark:text-white")
    a(href="/")
      button(class="bg-blue-500 active:bg-blue-600 text-white px-4 py-2 rounded" type="button")
        | Home (temp)
    h1(class="text-3xl font-bold")= title

    form(class="w-full max-w-lg flex flex-col" method="POST")
      //- First name
      div(class="md:flex md:items-center mb-6")
        div(class="md:w-1/3")
          label(class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="first-name")
            | First name
        div(class="md:w-2/3")
          input(
            class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"
            id="first-name"
            type="text"
            name="first_name"
            value=user ? user.first_name : ''
          )
      //- Last Name
      div(class="md:flex md:items-center mb-6")
        div(class="md:w-1/3")
          label(
            class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4"
            for="last-name"
          ) Last name
        div(class="md:w-2/3")
          input(
            class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"
            id="last-name"
            type="text"
            name="last_name"
            value=user ? user.last_name : ''
          )
      //- Username
      div(class="md:flex md:items-center mb-6")
        div(class="md:w-1/3")
          label(
            class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4"
            for="username"
          ) Username
        div(class="md:w-2/3")
          input(
            class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"
            id="username"
            type="text"
            name="username"
            value=user ? user.username : ''
          )
      //- Password
      div(class="md:flex md:items-center mb-6")
        div(class="md:w-1/3")
          label(
            class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4"
            for="password"
          ) Password
        div(class="md:w-2/3")
          input(
            class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"
            id="password"
            type="password"
            name="password"
          )
      //- Confirm password
      div(class="md:flex md:items-center mb-6")
        div(class="md:w-1/3")
          label(
            class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4"
            for="confirm-password"
          ) Confirm password
        div(class="md:w-2/3")
          input(
            class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"
            id="confirm-password"
            type="password"
            name="confirmPassword"
          )
      //- Sign up button
      div(class="md:flex md:items-center")
        div(class="md:w-1/3")
        div(class="md:w-2/3")
          button(
            class="shadow bg-purple-600 hover:bg-purple-500 active:bg-purple-600 text-white font-bold py-2 px-4 rounded"
            type="submit"
          ) Sign Up
      
      if errors
        div(class="md:flex md:items-center mb-6")
          div(class="md:w-1/3")
          ul(class="md:w-2/3")
            each error of errors
              li(class="text-sm")
                p= error.msg
