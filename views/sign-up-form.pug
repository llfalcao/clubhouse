extends layout

block content
  div.w-full.h-full.absolute.signin-bg
  main.w-full.h-full.bg-transparent
    form.shadow-sm.shadow-purple-500.rounded-md.p-6.mb-4.mx-auto.w-full.bg-neutral-900(
      class='md:w-96 md:border md:border-gray-700',
      method='POST'
    )
      h1.mb-4.text-xl.font-semibold Sign up
      //- First name
      div.mb-6(class='md:flex md:items-center')
        div(class='md:w-1/3')
          label.block.text-gray-300.font-semibold.mb-1.pr-4(
            class='md:text-right md:mb-0',
            for='first-name'
          )
            | First name
        div(class='md:w-2/3')
          input#first-name.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight(
            type='text',
            name='first_name',
            value=userInfo ? userInfo.first_name : ''
          )
      //- Last Name
      div.mb-6(class='md:flex md:items-center')
        div(class='md:w-1/3')
          label.block.text-gray-300.font-semibold.mb-1.pr-4(
            class='md:text-right md:mb-0',
            for='last-name'
          ) Last name
        div(class='md:w-2/3')
          input#last-name.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight(
            type='text',
            name='last_name',
            value=userInfo ? userInfo.last_name : ''
          )
      //- Username
      div.mb-6(class='md:flex md:items-center')
        div(class='md:w-1/3')
          label.block.text-gray-300.font-semibold.mb-1.pr-4(
            class='md:text-right md:mb-0',
            for='username'
          ) Username
        div(class='md:w-2/3')
          input#username.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight(
            type='text',
            name='username',
            value=userInfo ? userInfo.username : ''
          )
      //- Password
      div.mb-6(class='md:flex md:items-center')
        div(class='md:w-1/3')
          label.block.text-gray-300.font-semibold.mb-1.pr-4(
            class='md:text-right md:mb-0',
            for='password'
          ) Password
        div(class='md:w-2/3')
          input#password.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight(
            type='password',
            name='password'
          )
      //- Confirm password
      div.mb-6(class='md:flex md:items-center')
        div(class='md:w-1/3')
          label.block.text-gray-300.font-semibold.mb-1.pr-4(
            class='md:text-right md:mb-0',
            for='confirm-password'
          ) Confirm password
        div(class='md:w-2/3')
          input#confirm-password.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight(
            type='password',
            name='confirmPassword'
          )
      //- Sign up button
      div.w-full.text-right
        button.shadow.bg-violet-600.text-gray-200.font-semibold.py-2.px-3.rounded(
          class='active:bg-violet-600 w-1/3',
          type='submit'
        ) Sign up

      if errors
        ul.mt-3.text-red-500.list-disc(class='md:w-3/3')
          each error of errors
            li.text-sm
              p= error.msg
