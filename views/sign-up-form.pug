extends layout

block content
  main.w-full
    a(href='/')
      button.bg-blue-500.text-white.px-4.py-2.rounded(
        class='active:bg-blue-600',
        type='button'
      )
        | Home (temp)
    h1= title

    form.font-bold.w-full.mx-auto.max-w-lg.flex.flex-col(method='POST')
      //- First name
      div.mb-6(class='md:flex md:items-center')
        div(class='md:w-1/3')
          label.block.text-gray-500.font-bold.mb-1.pr-4(
            class='md:text-right md:mb-0',
            for='first-name'
          )
            | First name
        div(class='md:w-2/3')
          input#first-name.bg-gray-200.appearance-none.border-2.border-gray-200.rounded.w-full.py-2.px-4.text-gray-700.leading-tight(
            class='focus:outline-none focus:bg-white focus:border-purple-500',
            type='text',
            name='first_name',
            value=user ? user.first_name : ''
          )
      //- Last Name
      div.mb-6(class='md:flex md:items-center')
        div(class='md:w-1/3')
          label.block.text-gray-500.font-bold.mb-1.pr-4(
            class='md:text-right md:mb-0',
            for='last-name'
          ) Last name
        div(class='md:w-2/3')
          input#last-name.bg-gray-200.appearance-none.border-2.border-gray-200.rounded.w-full.py-2.px-4.text-gray-700.leading-tight(
            class='focus:outline-none focus:bg-white focus:border-purple-500',
            type='text',
            name='last_name',
            value=user ? user.last_name : ''
          )
      //- Username
      div.mb-6(class='md:flex md:items-center')
        div(class='md:w-1/3')
          label.block.text-gray-500.font-bold.mb-1.pr-4(
            class='md:text-right md:mb-0',
            for='username'
          ) Username
        div(class='md:w-2/3')
          input#username.bg-gray-200.appearance-none.border-2.border-gray-200.rounded.w-full.py-2.px-4.text-gray-700.leading-tight(
            class='focus:outline-none focus:bg-white focus:border-purple-500',
            type='text',
            name='username',
            value=user ? user.username : ''
          )
      //- Password
      div.mb-6(class='md:flex md:items-center')
        div(class='md:w-1/3')
          label.block.text-gray-500.font-bold.mb-1.pr-4(
            class='md:text-right md:mb-0',
            for='password'
          ) Password
        div(class='md:w-2/3')
          input#password.bg-gray-200.appearance-none.border-2.border-gray-200.rounded.w-full.py-2.px-4.text-gray-700.leading-tight(
            class='focus:outline-none focus:bg-white focus:border-purple-500',
            type='password',
            name='password'
          )
      //- Confirm password
      div.mb-6(class='md:flex md:items-center')
        div(class='md:w-1/3')
          label.block.text-gray-500.font-bold.mb-1.pr-4(
            class='md:text-right md:mb-0',
            for='confirm-password'
          ) Confirm password
        div(class='md:w-2/3')
          input#confirm-password.bg-gray-200.appearance-none.border-2.border-gray-200.rounded.w-full.py-2.px-4.text-gray-700.leading-tight(
            class='focus:outline-none focus:bg-white focus:border-purple-500',
            type='password',
            name='confirmPassword'
          )
      //- Sign up button
      div(class='md:flex md:items-center')
        div(class='md:w-1/3')
        div(class='md:w-2/3')
          button.shadow.bg-purple-600.text-white.font-bold.py-2.px-4.rounded(
            class='hover:bg-purple-500 active:bg-purple-600',
            type='submit'
          ) Sign Up

      if errors
        div.mb-6(class='md:flex md:items-center')
          div(class='md:w-1/3')
          ul(class='md:w-2/3')
            each error of errors
              li.text-sm
                p= error.msg
